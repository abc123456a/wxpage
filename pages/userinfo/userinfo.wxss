/**index.wxss**/
page{
	background-color:#f8f8f8;
}
.userinfo {
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}

.userinfo-avatar {
  width: 128rpx;
  margin: 20px auto;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
   font-size: 14px;
   margin-bottom: 16px;
}
.userinfo-nickname image{
	width: 14px;
	height: 14px;
	float:right;
  overflow:hidden;

}

.usermotto {
  margin-top: 10px;
  width: 100%;
  background-color: #fff;
}
.usermotto .user-motto {
  display: inline-block;
  width: 50%;
  text-align: center;
  padding: 16px 0;
}


.default{
  display: inline-block;
  width: 50%;
  text-align: center;
  padding: 16px 0;
  font-size: 14px;
  color: #c0c0c0;
}

.red{
  display: inline-block;
  width: 50%;
  font-size: 14px;
  text-align: center;
  padding: 16px 0;
  border-bottom: 1px solid red;
  }

.show{
display:block;
text-align:center;
font-size: 14px;
color: #adadad;
font-family: Arial;
}
.show image {
  width: 80px;
  height: 102px;
  display: block;
  margin: 0 auto;
  padding-top: 80px;
  padding-bottom: 26px;
}
.hidden{
display:none;
text-align:center;
}